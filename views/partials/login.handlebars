<section>

<h1>Log in to Recipe Service</h1>

<div class="form-card" type="form" aria-label="Log in to Recipe Service">
    <form id="loginForm" action="/login" method="POST">
        <label for="email"><strong>Email: </strong></label>
        <input type="email" id="email" name="email" required><br>

        <label for="password"><strong>Password:</strong></label>
        <input type="password" id="password" name="password" required><br>

        {{!-- if the passport authentication "fails",
        ie. email or password are wrong, this message will be displayed. --}}
        {{#if message}}
        <div class="error-box" aria-live="assertive">
            <p class="error-message">{{message}}</p>
        </div>
        {{/if}}

        <button type="submit">Login</button>
    </form>
</div>
</section>