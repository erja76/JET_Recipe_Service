<label for="recipePreferences"><strong>What kind of recipes do you like?</strong></label><br>
<input type="checkbox" {{#ifIn "salad" userToBeUpdated.recipeInterests}} checked {{/ifIn}} id="salad"
    name="recipePreferences" value="salad">
<label for="salad">Salad</label><br>

<input type="checkbox" {{#ifIn "meat" userToBeUpdated.recipeInterests}} checked {{/ifIn}} id="meat"
    name="recipePreferences" value="meat">
<label for="meat">Meat</label><br>

<input type="checkbox" {{#ifIn "fish" userToBeUpdated.recipeInterests}} checked {{/ifIn}} id="fish"
    name="recipePreferences" value="fish">
<label for="fish">Fish</label><br>

<input type="checkbox" {{#ifIn "vegetarian" userToBeUpdated.recipeInterests}} checked {{/ifIn}} id="vegetarian"
    name="recipePreferences" value="vegetarian">
<label for="vegetarian">Vegetarian</label><br>

<input type="checkbox" {{#ifIn "pizza" userToBeUpdated.recipeInterests}} checked {{/ifIn}} id="pizza"
    name="recipePreferences" value="pizza">
<label for="pizza">Pizza</label><br>

<input type="checkbox" {{#ifIn "pastries" userToBeUpdated.recipeInterests}} checked {{/ifIn}} id="pastries"
    name="recipePreferences" value="pastries">
<label for="pastries">Pastries</label><br>

<input type="checkbox" {{#ifIn "desserts" userToBeUpdated.recipeInterests}} checked {{/ifIn}} id="desserts"
    name="recipePreferences" value="desserts">
<label for="desserts">Desserts</label><br>

<label><strong>Would you like to receive recommendations of recipes that match your
        preferences?</strong></label><br>
<input type="radio" id="recommendationsYes" name="receiveRecommendations" value="true" {{#ifEqual
    userToBeUpdated.receiveRecommendations true }}checked{{/ifEqual}} required>
<label for="recommendationsYes">Yes</label>
<input type="radio" id="recommendationsNo" name="receiveRecommendations" value="false" {{#ifEqual
    userToBeUpdated.receiveRecommendations false }}checked{{/ifEqual}} required>
<label for="recommendationsNo">No</label><br>